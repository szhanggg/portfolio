---
import NavBar from "../components/NavBar.astro";
---

<div class="w-full h-[100svh]">
  <NavBar />
  <section class="w-full h-full relative md:mt-[20vh]">
    <div
      class="w-[5vw] md:w-[15vw] relative bg-white dark:bg-darkbg"
      id="timeline"
    >
      <div class="bullet"></div>
    </div>
    <span class="top-0 absolute ml-4">
      <div class="font-sf text-md text-gray-400 bottom-2 relative" id="start">
        start
      </div>
      <h1
        class="mt-[15vh] md:mt-[15vh] font-gotham text-md md:text-2xl"
        id="fp-name"
      >
        Hi I'm <em class="text-3xl md:text-6xl not-italic text-primary font-bold py-6"
          >Stephen Zhang</em
        >
      </h1>
      <h1 class="font-gotham text-2xl md:text-6xl" id="fp-sub">
        &ltStudentDeveloper /&gt
      </h1>
    </span>
  </section>
</div>

<style>
  #timeline {
    display: inline-block;
    height: 100%;
    border-right: 1px solid var(--secondary);
    z-index: 100;
  }

  .bullet {
    width: 10px;
    height: 10px;
    background-color: var(--secondary);
    border-radius: 50%;
    position: absolute;
    top: 0;
    right: 0;
    transform: translateX(50%);
  }
</style>
